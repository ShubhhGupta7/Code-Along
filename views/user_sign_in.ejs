    <main>
        <div id="description">
            <div id="logo-container">
                <i class="fas fa-chevron-left" style="color: #81d4fa;"></i>
                <span>CODEIAL</span>
                <i class="fas fa-chevron-right" style="color: blue;"></i>
            </div>            
            
            <h3>
                &copy; Codeial. All Rights Reserved
            </h3>
            <div class="author-container">
                <a href="https://www.instagram.com/shubhhgupta3/" target="_black"><h3>Author @ Shubh Gupta</h3></a>
            </div>
        </div>
        <div class = 'sign-in-container'>
            <div class = 'heading-container'>
                <h2>Sign In</h2>
            </div>
                <form action="/users/create-session" method="POST">
                    <div class="input-container">
                        <input type="email" name="email" required placeholder="Your Email">
                    </div>
                    <div class="input-container">
                        <input type="password" name="password" required placeholder="Password">
                    </div>
                    <div class="input-container btn">
                        <input type="submit" value = "Log In">
                    </div>
                </form>

                <div id='social-authentication-container'>
                    <div>
                        <a href="/users/auth/google">
                            <button>Continue with Google</button>
                        </a>
                    </div>
                    <div>
                        <a href="/users/reset-password">
                            <button>Forget password?</button>
                        </a>
                    </div>
                </div>

            </div>
        </div>    
    </main>

    