<link rel="stylesheet" href="<%= assertPath('css/change_password.css')%>">

    <main>
        <div id="description">
            <div id="logo-container">
                <i class="fas fa-chevron-left" style="color: #81d4fa;"></i>
                <span>CODEIAL</span>
                <i class="fas fa-chevron-right" style="color: blue;"></i>
            </div>            
            
            <h3>
                &copy; Codeial. All Rights Reserved
            </h3>
            <div class="author-container">
                <a href="https://www.instagram.com/shubhhgupta3/" target="_black"><h3>Author @ Shubh Gupta</h3></a>
            </div>
        </div>
        <div class = 'update-password-container'>
            <div class = 'heading-container'>
                <h2>Update Password</h2>
            </div>
                <form action="/users/update-password" method="POST">
                    <div class="input-container">
                        <input type="password" name="password" required placeholder="New Password">
                    </div>

                    <div class="input-container">
                        <input type="password" name = "confirm_password" required placeholder="Confirm Password">
                    </div>

                    <input type="hidden" name="accessToken" value= "<%= accessToken %> ">
                    
                    <div class="input-container btn">
                        <input type="submit" value = "update">
                    </div>
                </form>

            </div>
        </div>    
    </main>

    